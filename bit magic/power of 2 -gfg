return  n && (!(n & (n - 1))); // 1st and 2nd :=> if even 2nd part give true(first false then true ) ,then and with true is true ;
OR
class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        //for the execption '0'
        if(n==0)
        return false;
        if(n & (n-1))
        return false;
        else
        return true;
        
    }
};
